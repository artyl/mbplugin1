// Плагин для программы MobileBalance: http://mtsoft.ru/mobilebalance/
//
// Инструкция по использованию:
// 1. зайти в настройки программы MobileBalance, перейти на закладку "Плагины: Операторы", добавить плагин.
// 2. После этого перейти на закладку "Телефоны" и в качестве оператора выбрать оператора с названием, указанным ниже.
//
// FullName  : Мегафон
// ShortName : MgfBal
// Version   : 10.07.2019
// Icon      : 
// Author    : leha3d (Pasha edit)
// Types     : leha3d (Pasha edit)
// Descript  : Баланс у сотового оператора Мегафон после изменений в ноябре 2018г.
// Descript  : Личный кабинет: https://lk.megafon.ru/login/

function main(){
	var p = 0;
	// Заходим на главную страницу
	document.location="https://lk.megafon.ru/login/";
	if(!external.WaitBrowser) return;
	response.pages[p++]=external.source;

	// Вводим логин и пароль и submit форму
	if(document.all.j_username) {
		document.all.j_username.value=request.loginValue;
		document.all.j_password.value=request.passwValue;
		document.all.j_password.form.submit();
		if(!external.WaitBrowser) return;
	};

//	external.sleep(1000);

	// Баланс
	xmlhttp = external.getXmlHttp()
	xmlhttp.open('GET', 'https://lk.megafon.ru/api/lk/main/atourexpense', false);
	xmlhttp.send(null);
	html=xmlhttp.responseText;
	regexp=/balance..(.*?)}/;
	if (res=regexp.exec(html)){
		tmp=res[0].replace(/balance..|}/gm, "");
		tmp=tmp.replace(",", "."); // Заменяем запятую на точку
		response.Balance=tmp;
	};

	// Предоставленный лимит
	regexp=/limit..(.*?),/;
	if (res=regexp.exec(html)){
		tmp=res[0].replace(/limit..|,/gm, "");
		tmp=tmp.replace(",", "."); // Заменяем запятую на точку
		response.KreditLimit=parseFloat(tmp);
	};

	// ФИО
	xmlhttp = external.getXmlHttp()
	xmlhttp.open('GET', 'https://lk.megafon.ru/api/profile/name', false);
	xmlhttp.send(null);
	html=xmlhttp.responseText;
	regexp=/name..(.*?)}/;
	if (res=regexp.exec(html)){
		tmp=res[0].replace(/name...|"}/gm, "");
		tmp=tmp.replace(",", "."); // Заменяем запятую на точку
		response.UserName=tmp;
	};

	// Тариф
	xmlhttp = external.getXmlHttp()
	xmlhttp.open('GET', 'https://lk.megafon.ru/api/tariff/current', false);
	xmlhttp.send(null);
	html=xmlhttp.responseText;
	regexp=/nameHtml...(.*?)"/;
	if (res=regexp.exec(html)){
		tmp=res[0].replace(/nameHtml...|"/gm, "");
//		tmp=res[0].replace(/&nbsp;/g, " ");
		tmp=tmp.replace(",", "."); // Заменяем запятую на точку
		response.TarifPlan=tmp;
	};

	// Количество услуг
	xmlhttp = external.getXmlHttp()
	xmlhttp.open('GET', 'https://lk.megafon.ru/api/lk/mini/options', false);
	xmlhttp.send(null);
	html=xmlhttp.responseText;
	regexp=/free..(.*?),/;
	if (res=regexp.exec(html)){
		free=res[0].replace(/free..|,/gm, "");
	};
	regexp=/paid..(.*?)}/;
	if (res=regexp.exec(html)){
		paid=res[0].replace(/paid..|}/gm, "");
		response.UslugiOn=free + '/' + paid;
	};

	//Остатки
	xmlhttp = external.getXmlHttp()
	xmlhttp.open('GET', 'https://lk.megafon.ru/api/options/remaindersMini', false);
	xmlhttp.send(null);
	html=xmlhttp.responseText;
	// Минуты
	regexp=/unit":"мин(.*?)"},"availableValue":{"value":(.*?),"unit":"мин/;
	if (res=regexp.exec(html)){
		tmp=res[0].replace(/unit.:.мин(.*?).},.availableValue.:{.value.:|,.unit.:.мин/gm, "");
		response.Min=parseFloat(tmp);
	};
	// Интернет
	regexp=/unit":"ГБ"},"availableValue":{"value":(.*?),"unit":"ГБ/;
	if (res=regexp.exec(html)){
		tmp=res[0].replace(/unit.:.ГБ.},.availableValue.:{.value.:|,.unit.:.ГБ/gm, "");
		response.Internet=parseFloat(tmp);
	} else if (tmp = "0") {
		regexp=/unit":"МБ"},"availableValue":{"value":(.*?),"unit":"МБ/;
		res=regexp.exec(html)
		tmp=res[0].replace(/unit.:.МБ.},.availableValue.:{.value.:|,.unit.:.МБ/gm, "");
		tmp=tmp/1000
		tmp=Math.floor(tmp*100)/100
		response.Internet=parseFloat(tmp);
	};
	// SMS
	regexp=/unit":"шту(.*?)"},"availableValue":{"value":(.*?),"unit":"шту(.*?)/;
	if (res=regexp.exec(html)){
		tmp=res[0].replace(/unit.:.шту(.*?).},.availableValue.:{.value.:|,.unit.:.шту(.*?)/gm, "");
		response.SMS=parseFloat(tmp);
	};

	// Выходим
	external.sleep(300);
	document.location="https://lk.megafon.ru/logout/";
	if(!external.WaitBrowser) return;

};
main();
